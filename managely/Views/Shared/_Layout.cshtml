@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - managely</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @await RenderSectionAsync("Styles", false)

        
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <!-- js materializecss -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- jquery with datatable -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="~/js/orgchart.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</head>

<body>

<nav>
    <div class="nav-wrapper">
        <nav class="deep-purple lighten-2">
            <a href="#" class="brand-logo right">
                <img style="height: 25px" src="~/images/logo-white.svg" alt="logo" class="responsive-img">
            </a>
            <a href="#" data-target="mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul class="left hide-on-med-and-down">
                <li><a asp-area="" asp-controller="Collaborators" asp-action="Index">Colaboradores</a></li>
                <li><a asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a></li>
            </ul>
        </nav>
        <ul class="sidenav" id="mobile">
            <li><div class="user-view">
                    <div class="background deep-purple lighten-2"></div>
                    <a href="#user"><img alt="" src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="responsive-img circle" /></a>
                    <a href="#name"><span class="white-text name">@User.Claims.First(e => e.Type.Equals(ClaimTypes.GivenName)).Value</span></a>
                    <a href="#email"><span class="white-text email">@User.Identity!.Name</span></a>
                </div>
            </li>
            <li><a asp-area="" asp-controller="Collaborators" asp-action="Index">Colaboradores</a></li>
            <li><a asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a></li>
        </ul>
        <div id="loader" class="progress deep-purple lighten-3" style="height:5px; display: none">
            <div class="indeterminate deep-purple lighten-2"></div>
        </div>
    </div>
</nav>

<div class="container">
    @RenderBody()
</div>
<script>
 $(document).ready(function(){
    $('.sidenav').sidenav();
  });
</script>
</body>
</html>

