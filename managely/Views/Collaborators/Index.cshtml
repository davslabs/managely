@model IEnumerable<Managely.Models.ViewModel.CollaboratorViewModel>

@{
    ViewBag.Title = "Colaboradores";
    Layout = "_Layout";
}

<h1>Colaboradores</h1>
<hr />

<section class="section">
    <div class="row">
        <div class="col s12 l12">
            <table id="collaborators-table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Puesto</th>
                        <th>Departamento</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td><img height="60" width="45" src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" 
                                     alt="" class="z-depth-2 circle responsive-img" /></td>
                            <td>@employee.DisplayName</td>
                            <td>@employee.Email</td>
                            <td>@employee.JobPosition</td>
                            <td>@employee.Department</td>
                            <td><a href="@Url.Action("GetEmployeeProfile","Collaborators", new { employeeId = employee.EmployeeId })" 
                                   class="btn-floating btn-small waves-effect waves-light deep-purple lighten-3"><i class="material-icons">create</i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>



<script>
    $(document).ready(function () {
        $('#collaborators-table').DataTable({
            responsive: true
        });
        $('select').formSelect();
    });
</script>
<style>
    .pagination li.active {
        background-color: #b39ddb !important;
    }
</style>