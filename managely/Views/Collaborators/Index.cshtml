@model IEnumerable<Managely.Models.ViewModel.CollaboratorViewModel>

@{
    ViewBag.Title = "Colaboradores";
    Layout = "_Layout";
}

<div class="row grey lighten-3">
    <div class="header-title col s12">
        <h1>Colaboradores</h1>
        <ul class="tabs grey lighten-3">
            <li class="tab col s3"><a class="active" href="#collabList">Listado</a></li>
            <li class="tab col s3"><a id="newCollabLink" href="#newCollab">Crear Colaborador</a></li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <div id="collabList">
            @{ await Html.RenderPartialAsync("CollabList", Model); }
        </div>
        <div id="newCollab"></div>
    </div>
</div>

<style>
    .tabs {
        margin-top: 20px;
    }
    .tabs .tab a{
        color: #000;
    }
    .tabs .tab a:hover {
        background-color:#eee;
        color: #d1c4e9;
    }
    .tabs .tab a.active {
        background-color: #ede7f6;
        color: #b39ddb;
    }
    .tabs .indicator {
        background-color: #9575cd;
    }
    .header-title h1{
      font-weight: lighter;
      margin: 0
    }
</style>



<script>
    $(document).ready(function () {
        $('.tabs').tabs();       
    });
    
    $('#newCollabLink').click(function(){
        $('#newCollab').load('/Collaborators/AddNewEmployee');
    });
</script>
<style>
    .pagination li.active {
        background-color: #b39ddb !important;
    }
</style>